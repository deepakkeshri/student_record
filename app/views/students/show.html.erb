<div align="right">
<%= link_to("HOME", {:controller => 'students', :action => 'menu'} )%>
<%= link_to("BACK", {:controller => 'students',:action => 'home'})%>
 </div>
<p>Logged in as </p>
<div class="Show student">
	<h2 align="center">Showing Student</h2>

	<table summary="Student Detail" border="1" align="center">
		<tr>
			<th>Name</th>
			<td><%= @student.name%></td>
		</tr>
		<tr>
			<th>Username</th>
			<td><%= @student.username%></td>
		</tr>
		<tr>
			<th>Class</th>
			<td><%= @student.cls%></td>
		</tr>
		<tr>
			<th>Section</th>
			<td><%= @student.section%></td>
		</tr>
		<tr>
			<th>Email Id</th>
			<td><%= @student.email%></td>
		</tr>
		<tr>
			<th>Mobile</th>
			<td><%= @student.mobile%></td>
		</tr>
		<tr>
			<th>Created</th>
			<td><%= @student.created_at%></td>
		</tr>
		<tr>
			<th>Updated</th>
			<td><%= @student.updated_at%></td>
		</tr>
		</table>
</div>
<div>
<%= form_for(:student, :url => {:action => 'login' }) do |f| %>
		
	<div align="center">
		<%= submit_tag("Log out")%>
	</div>
	<% end %>
</div>
