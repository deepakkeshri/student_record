<div align="center">
<%= link_to("HOME", {:controller => 'students', :action => 'menu'} )%> |
<%= link_to("Add Student", {:action => 'add'})%>
</div>
</br>
<p>Logged in as </p>
<table class="listing" summary= "Student data" border="1" align="center">
	<tr style="background-color:#00ff00">
		<th>Name</th>
		<th>Class</th>
		<th>Section</th>
		<th>Email</th>
		<th>Mobile</th>
		<th>Actions</th>
	</tr>
	<% @students.each do |student| %>
	<tr>
		<td><%= student.name %></td>
		<td><%= student.cls %></td>
		<td><%= student.section %></td>
		<td><%= student.email %></td>
		<td><%= student.mobile %></td>
		<td>
			<%= link_to("Show", {:action => 'show', :id => student.id})%>	
			<%= link_to("Edit", {:action => 'edit', :id => student.id})%>
			<%= link_to("Delete", {:action => 'delete', :id => student.id})%>
		</td>
	</tr>
	<% end %>
</table>
<div>
<%= form_for(:student, :url => {:action => 'login' }) do |f| %>
		
	<div align="center">
		<%= submit_tag("Log out")%>
	</div>
	<% end %>
</div>
