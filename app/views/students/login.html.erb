<div align="right">
<%= link_to("HOME", {:controller => 'students', :action => 'menu'} )%>

<%= link_to("BACK", {:controller => 'students',:action => 'menu'})%>
</div>

<div class="Add student">
	<h2 align="center">Pleaase Login to access database!</h2>
	
	<%= form_for(:student, :url => {:controller => 'students',:action => 'logged'}) do |f| %>
	<table summary="Log in" align="center">
		<tr>
			<th>Username</th>
			<td><%= f.text_field(:name)%></td>
		</tr>
		<tr>
			<th>Password</th>
			<td><%= f.password_field(:username)%></td>
		</tr>
	</table>
		<div class="form_buttons" align="center">
			<%= submit_tag("Log in")%>
		</div>
	
	<% end %>
</div>