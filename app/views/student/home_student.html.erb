<div align="center">
<%= link_to("HOME", {:controller => 'student', :action => 'menu_student'} )%> |
<%= link_to("Add Student", {:action => 'add_student'})%>
</div>
</br>

<table class="listing" summary= "Student data" border="1" align="center">
	<tr style="background-color:#00ff00">
		<th>Name</th>
		<th>Class</th>
		<th>Section</th>
		<th>Email</th>
		<th>Mobile</th>
		<th>Actions</th>
	</tr>
	<% @students.each do |student| %>
	<tr>
		<td><%= student.name %></td>
		<td><%= student.cls %></td>
		<td><%= student.section %></td>
		<td><%= student.email %></td>
		<td><%= student.mobile %></td>
		<td>
			<%= link_to("Show", {:action => 'show_student', :id => student.id})%>	
			<%= link_to("Edit", {:action => 'edit_student', :id => student.id})%>
			<%= link_to("Delete", {:action => 'delete_student', :id => student.id})%>
		</td>
	</tr>
	<% end %>
</table>
</html>
